@model MVC_Project.Models.User_Info

<h4>My Account</h4>
<div class="dashboard-message contact-2 bdr clearfix">
    <div class="row">
        <div class="col-lg-12">
            <form id="profileForm" enctype="multipart/form-data">
                <div class="row">
                    @Html.HiddenFor(m => m.Id)
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            @Html.TextBoxFor(m => m.F_Name, new { @class = "form-control", placeholder = "First Name", @id = "F_Name" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.TextBoxFor(m => m.L_Name, new { @class = "form-control", placeholder = "Last Name", @id = "L_Name" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>Phone</label>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number", @id = "PhoneNumber" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", @id = "Email" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address", @id = "Address" })
                        </div>
                    </div>
                    <div class="send-btn">
                        <button type="button" id="submitBtn" class="btn btn-md button-theme">Send Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#submitBtn').click(function () {
                // تجميع بيانات النموذج
                var userInfo = {
                    F_Name: $('#F_Name').val(),
                    L_Name: $('#L_Name').val(),
                    Email: $('#Email').val(),
                    PhoneNumber: $('#PhoneNumber').val(),
                    Address: $('#Address').val(),
                    ProfilePicture: "" // يمكنك إضافة صورة في حال احتجت لذلك
                };

                console.log(userInfo); // عرض بيانات userInfo في الـ console

                // قراءة قيمة Id الخاصة بالمستخدم من الحقل المخفي
                var userId = '@Model.Id';

                // إرسال طلب AJAX إلى الـ API مباشرة
                $.ajax({
                    url: 'https://localhost:7197/api/User/UpdateById/' + userId,
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(userInfo),
                    success: function (response) {
                        alert('Profile updated successfully!');
                        // يمكنك إعادة تحميل الـ Partial View أو تحديث جزء من الصفحة هنا
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr); // عرض تفاصيل الخطأ في الـ console
                        alert('Failed to update profile. Please try again.');
                    }
                });
            });
        });
    </script>
}
